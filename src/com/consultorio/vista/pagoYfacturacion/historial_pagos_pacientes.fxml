<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.pagoYfacturacion.HistorialPagosPaciente"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #F8F9FA;">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">
            <children>

                <Label text="Historial de Pagos del Paciente"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                <Label text="Buscar por nombre:" />
                <TextField fx:id="txtBuscar" promptText="Nombre del paciente" />

                <TableView fx:id="tablaHistorial" prefHeight="600" prefWidth="800">
                    <columns>
                        <TableColumn text="Fecha" />
                        <TableColumn text="Concepto" />
                        <TableColumn text="Monto" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </children>
</AnchorPane>
