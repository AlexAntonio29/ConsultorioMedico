<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.pacientes.historialClinico"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #ECF0F1;">
    <children>
        <!-- Contenedor principal centrado -->
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">
            <children>
                <!-- Título del módulo -->
                <Label text="Historial Clínico"
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                <!-- Tabla que muestra el historial clínico -->
                <TableView fx:id="tvHistorial" prefHeight="600.0" prefWidth="1800.0">
                    <columns>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="200"/>
                        <TableColumn fx:id="colDiagnostico" text="Diagnóstico" prefWidth="500"/>
                        <TableColumn fx:id="colTratamiento" text="Tratamiento" prefWidth="500"/>
                        <TableColumn fx:id="colNotas" text="Notas" prefWidth="400"/>
                    </columns>
                </TableView>
                <!-- Botones de acción para el historial -->
                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <Button fx:id="btnVerDetalles" text="Ver Detalles"
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;"
                                prefWidth="150" prefHeight="40"/>
                        <Button fx:id="btnEditarHistorial" text="Editar"
                                style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 5;"
                                prefWidth="150" prefHeight="40"/>
                        <Button fx:id="btnEliminarHistorial" text="Eliminar"
                                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;"
                                prefWidth="150" prefHeight="40"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
