<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.usuarioPersonal.PersonalGeneral"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="60.0"
          AnchorPane.rightAnchor="60.0" AnchorPane.bottomAnchor="40.0">

        <Label text="Personal General" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Buscar:" />
            <TextField fx:id="tfBuscar" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" />
            <Button fx:id="bBuscarStock" style="-fx-text-fill: #ffffff; -fx-background-color: #233f9c" text="Buscar" />

        </HBox>


    <ScrollPane fitToWidth="false" fitToHeight="false" hbarPolicy="ALWAYS" vbarPolicy="AS_NEEDED">
        <content>

        <TableView fx:id="tvPersonalGeneral" >
            <columns>
                <TableColumn fx:id="colFoto" text="Foto" prefWidth="100"/>
                <TableColumn fx:id="colID" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colApellidoPaterno" text="Apellido Paterno" prefWidth="200"/>
                <TableColumn fx:id="colApellidoMaterno" text="Apellido Materno" prefWidth="200"/>
                <TableColumn fx:id="colFechaNacimiento" text="Fecha Nacimiento" prefWidth="200"/>
                <TableColumn fx:id="colOcupacion" text="Ocupacion" prefWidth="200"/>
                <TableColumn fx:id="colEspecialidad" text="Especialidad" prefWidth="200"/>
                <TableColumn fx:id="colDireccion" text="Direccion" prefWidth="200"/>
                <TableColumn fx:id="colTelefono" text="Telefono" prefWidth="200"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colFechaIngreso" text="Fecha Ingreso" prefWidth="200"/>
                <TableColumn fx:id="colSexo" text="Sexo" prefWidth="200"/>
                <TableColumn fx:id="colEdad" text="Edad" prefWidth="100"/>

            </columns>
        </TableView>
    </content></ScrollPane>

        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="btnAgregar" prefWidth="150.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Añadir Empleado" />
            <Button fx:id="btnModificar" prefWidth="150.0" style="-fx-background-color: #ef8300; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Añadir Empleado" />
            <Button fx:id="btnEliminar" prefWidth="150.0" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Añadir Empleado" />

        </HBox>



    </VBox>


</AnchorPane>
