<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.usuarioPersonal.rolesPermisos"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #ECF0F1;">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="60.0"
              AnchorPane.rightAnchor="60.0" AnchorPane.bottomAnchor="40.0">
            <children>

                <Label text="AdministraciÃ³n de Roles y Permisos"
                       style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                <HBox spacing="10">
                    <Label text="Seleccionar Rol:"/>
                    <ComboBox fx:id="comboRoles" prefWidth="200"/>
                    <Button text="Agregar Rol" fx:id="btnAgregarRol"
                            style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
                </HBox>

                <Label text="Permisos Asignados:" style="-fx-font-weight: bold;" />
                <ListView fx:id="listaPermisos" prefHeight="400" />

                <HBox spacing="10">
                    <TextField fx:id="txtNuevoPermiso" promptText="Nuevo Permiso" />
                    <Button text="Agregar Permiso"
                            fx:id="btnAgregarPermiso"
                            style="-fx-background-color: #8E44AD; -fx-text-fill: white;"/>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
