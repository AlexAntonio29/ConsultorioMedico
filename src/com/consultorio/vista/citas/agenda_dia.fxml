<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.citas.AgendaDia"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #ECF0F1;">



    <children>

    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">
        <children>

    <!-- Título -->
    <Label layoutX="50.0" layoutY="40.0"
           text="Agenda del Día"
           style="-fx-font-size: 32px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;" />

    <!-- DatePicker para seleccionar fecha -->
    <Label layoutX="50.0" layoutY="110.0"
           text="Selecciona una fecha:"
           style="-fx-font-size: 16px; -fx-text-fill: #34495E;" />

        <DatePicker fx:id="datePicker"
                    layoutX="220.0" layoutY="105.0"
                    prefWidth="200.0" />

            <TableView fx:id="tablaCitas"
                       layoutX="50.0" layoutY="160.0"
                       prefWidth="1820.0" prefHeight="880.0"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white; -fx-border-color: #DADADA;">

                <columns>
                    <TableColumn fx:id="colHora" text="Hora" prefWidth="150.0"/>
                    <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="350.0"/>
                    <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="500.0"/>
                    <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="300.0"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="250.0"/>
                </columns>
            </TableView>


        </children>
    </VBox>
    </children>
</AnchorPane>

