<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.citas.citasPendientes"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #F8F9FA;">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">

            <children>

                <Label text="Citas Pendientes"
                       style="-fx-font-size: 32px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;" />

                <TableView fx:id="tablaCitasPendientes" prefHeight="700.0">
                    <columns>
                        <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="300.0"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="200.0"/>
                        <TableColumn fx:id="colHora" text="Hora" prefWidth="150.0"/>
                        <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="250.0"/>
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="400.0"/>
                    </columns>
                </TableView>

            </children>
        </VBox>
    </children>
</AnchorPane>
