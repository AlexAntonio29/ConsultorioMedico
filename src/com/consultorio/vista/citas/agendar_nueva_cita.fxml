<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.citas.AgendarNuevaCita"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #F8F9FA;">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">

            <children>

                <!-- Título -->
                <Label text="Agendar Nueva Cita"
                       style="-fx-font-size: 32px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;" />

                <!-- Campos -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="400.0"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="40"/>
                        <RowConstraints minHeight="40"/>
                        <RowConstraints minHeight="40"/>
                        <RowConstraints minHeight="40"/>
                        <RowConstraints minHeight="40"/>
                    </rowConstraints>

                    <children>

                        <!-- Paciente -->
                        <Label text="Paciente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPaciente" promptText="Nombre del paciente"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <!-- Fecha -->
                        <Label text="Fecha:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="fechaCita" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Hora -->
                        <Label text="Hora:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtHora" promptText="Ej. 15:30"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <!-- Doctor -->
                        <Label text="Doctor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboDoctor" promptText="Selecciona un doctor"
                                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Motivo -->
                        <Label text="Motivo de la cita:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtMotivo" promptText="Motivo"
                                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    </children>
                </GridPane>

                <!-- Botón para agendar -->
                <Button text="Agendar Cita"
                        fx:id="btnAgendar"
                        style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
                        prefWidth="200"/>

            </children>
        </VBox>
    </children>
</AnchorPane>
