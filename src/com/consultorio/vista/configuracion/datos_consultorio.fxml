<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.configuracion.DatosConsultorio"
            prefWidth="1920.0" prefHeight="1080.0"
            style="-fx-background-color: #FDFEFE;">

    <children>
        <VBox spacing="20.0" alignment="TOP_CENTER"
              AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="100.0"
              AnchorPane.rightAnchor="100.0" AnchorPane.bottomAnchor="50.0">
            <children>

                <Label text="Datos del Consultorio"
                       style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495E;" />

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="40"/>
                    </rowConstraints>
                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombreConsultorio" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDireccion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <Button text="Guardar Cambios"
                        fx:id="btnGuardarDatos"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 16px;" />

            </children>
        </VBox>
    </children>
</AnchorPane>
