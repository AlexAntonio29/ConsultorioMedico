<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultorio.controlador.inventario.controlStock">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">

            <!-- Título Principal -->
            <Label fx:id="lTitle" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Gestión de Inventarios - Control de Stock" />

            <!-- Selector de Categoría -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Categoría:" />
                <ChoiceBox fx:id="choiceBoxCategoria" prefHeight="30.0" prefWidth="350.0">
                    <items>

                    </items>
                </ChoiceBox>

            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Buscar:" />
                <TextField fx:id="tfBuscar" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" />
                <Button fx:id="bBuscarStock" style="-fx-text-fill: #ffffff; -fx-background-color: #233f9c" text="Buscar" />
                <CheckBox fx:id="cbAgregar" mnemonicParsing="true" text="Agregar Stock" onAction="#agregarCheckBox">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></CheckBox>

                <CheckBox fx:id="cbRetirar" mnemonicParsing="false" text="Retirar Stock" onMouseClicked="#retirarCheckBox" />

            </HBox>

            <!-- Cantidad Disponible -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Cantidad disponible:" />
                <Label fx:id="labelCantidad" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #27AE60;" text="0" />
            </HBox>

            <!--  Aqui van los datos a introducir-->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Nombre" />
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" text="" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Stock" />
                <TextField style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" />



                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Fecha: " />
                <TextField style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" />


                <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Razón: " />
                <TextField style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #494949;" />
            </HBox>

            <!-- Botones de Gestión -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="btnAgregarStock" prefWidth="150.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Añadir Stock" />
                <Button fx:id="btnRetirarStock" prefWidth="150.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Retirar Stock" />
            </HBox>


            <!-- Historial de Movimientos -->
            <TableView fx:id="tablaMovimientos" prefHeight="300.0" prefWidth="700.0">
                <columns>
                    <TableColumn fx:id="columnaFecha" prefWidth="150.0" text="Fecha" />
                    <TableColumn fx:id="columnaCategoria" prefWidth="150.0" text="Categoría" />
                    <TableColumn fx:id="columnaAccion" prefWidth="150.0" text="Acción" />
                    <TableColumn fx:id="columnaCantidad" prefWidth="100.0" text="Cantidad" />
                    <TableColumn fx:id="columnaResponsable" prefWidth="150.0" text="Responsable" />
                </columns>
            </TableView>

        </VBox>
    </children>
</AnchorPane>
