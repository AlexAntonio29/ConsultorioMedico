<?xml version="1.0" encoding="UTF-8"?>

<!-- DashboardResumen.fxml: Diseño profesional de información resumen para la zona central del panel -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultorio.controlador.Inicio" fx:id="anchorPane" >
    <children>
        <!-- GridPane que organiza las tarjetas en 2 filas y 3 columnas -->
        <GridPane hgap="30.0" layoutX="50.0" layoutY="50.0" vgap="30.0" fx:id="grid" >
            <columnConstraints>
                <!-- Se dividen las columnas en porcentajes para mantener el diseño responsivo -->
                <ColumnConstraints percentWidth="33.33" />
                <ColumnConstraints percentWidth="33.33" />
                <ColumnConstraints percentWidth="33.33" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50" />
                <RowConstraints percentHeight="50" />
            </rowConstraints>

            <!-- Tarjeta 1: Resumen de Pacientes -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Pacientes" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Pacientes registrados." />
                </children>
            </VBox>

            <!-- Tarjeta 2: Resumen de Citas -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Citas del Día" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Citas agendadas para hoy." />
                </children>
            </VBox>

            <!-- Tarjeta 3: Resumen de Consultas -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Consultas Médicas" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Consultas hoy realizadas." />
                </children>
            </VBox>

            <!-- Tarjeta 4: Resumen de Reportes -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reportes" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Reportes generados." />
                </children>
            </VBox>

            <!-- Tarjeta 5: Resumen de Inventario -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inventario" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Items disponibles." />
                </children>
            </VBox>

            <!-- Tarjeta 6: Resumen de Usuarios/Personal -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 20;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <children>
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Usuarios / Personal" />
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #3498DB;" text="0" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Personal activo en el sistema." />
                </children>
            </VBox>
        </GridPane>
    </children>
</AnchorPane>
