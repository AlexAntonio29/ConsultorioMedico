<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultorio.controlador.inventario.medicamentoDisponibles">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">

            <Label fx:id="lTitle" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Medicamentos Disponibles" />

            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Buscar Medicamento:" />
                    <TextField fx:id="tfBusqueda" prefWidth="250" promptText="Ingrese nombre o ID del Medicamento" />
                    <Button fx:id="btnBuscar" style="-fx-background-color:#3498DB; -fx-text-fill: white; -fx-background-radius: 5;" text="Buscar" />
                </children>
            </HBox>

            <!-- Agregar la tabla para donde aparecera los medicamentos dispoibles -->
            <TableView  prefHeight="150.0" prefWidth="513.0">
                <columns>
                    <TableColumn fx:id="colID" prefWidth="100" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="240" text="Nombre" />
                    <TableColumn fx:id="colDiponibilidad" prefWidth="240" text="Cantidad Disponible" />
                    <TableColumn fx:id="colFechaVencimiento" prefWidth="240" text="Fecha de Vencimiento" />
                    <TableColumn fx:id="colCondicionAlmacenamiento" prefWidth="240" text="Condiciones de almacenamiento" />



                </columns>
            </TableView>


        </VBox>
    </children>

</AnchorPane>
