<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.inventario.registroInsumos"
            prefHeight="400.0" prefWidth="600.0">
    <children>
    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">
