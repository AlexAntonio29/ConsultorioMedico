            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Buscar Insumos:" />
                <TextField fx:id="tfBusqueda" prefWidth="250" promptText="Ingrese nombre o ID del Insumo" />
                <Button fx:id="btnBuscar" style="-fx-background-color:#3498DB; -fx-text-fill: white; -fx-background-radius: 5;" text="Buscar" />
            </children>
        </HBox>

        <!-- Agregar la tabla para donde aparecera los medicamentos dispoibles -->
        <TableView  prefHeight="150.0" prefWidth="513.0">
            <columns>
                <TableColumn fx:id="colID" prefWidth="100" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="240" text="Nombre" />
                <TableColumn fx:id="colDiponibilidad" prefWidth="240" text="Cantidad Disponible" />
                <TableColumn fx:id="colFechaVencimiento" prefWidth="240" text="Fecha de Vencimiento" />
                <TableColumn fx:id="colProveedor" prefWidth="240" text="Proveedor" />
                <TableColumn fx:id="colCostoUnitario" prefWidth="240" text="Valor Unitario" />
                <TableColumn fx:id="colCategoria" prefWidth="240" text="CategorÃ­a" />
                <TableColumn fx:id="colCondiciones" prefWidth="240" text="Condiciones de Almacenamiento" />

            </columns>
        </TableView>

    </VBox>


    </children>

</AnchorPane>
