<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultorio.controlador.usuarioPersonal.AgregarPersonal">
    <AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #ECF0F1;">
        <children>
            <!-- Contenedor principal -->
            <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="50.0">
                <children>

                    <!-- Título del formulario -->
                    <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Registrar Nuevo Empleado" />

                    <!-- Contenedor del formulario -->
                    <GridPane fx:id="gridPane" hgap="20.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 30;" vgap="20.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30" />
                            <ColumnConstraints percentWidth="70" />
                        </columnConstraints>
                        <children>

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Foto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <ImageView fx:id="ivFoto" fitHeight="100" fitWidth="100" StackPane.alignment="BOTTOM_RIGHT" />
                                <Button onAction="#actionbtnCamera" StackPane.alignment="BOTTOM_RIGHT" fx:id="btnCargarImg" style="-fx-border-radius: 10">
                                    <graphic>
                                        <ImageView fx:id="ivFotoCamera" />
                                    </graphic>
                                </Button>
                            </StackPane>

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="tfNombre" promptText="Ingrese el nombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />



                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Apellido Paterno:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="tfApellidoPaterno" promptText="Ingrese apellido paterno" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Apellido Materno:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="tfApellidoMaterno" promptText="Ingrese apellido materno" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Fecha de Nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <DatePicker fx:id="dpFechaNacimiento" promptText="Seleccione la fecha" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Curp:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <TextField fx:id="tfCurp" promptText="Ingrese CURP" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                            <TextField fx:id="tfDireccion" promptText="Ingrese la dirección" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                            <TextField fx:id="tfTelefono" promptText="Ingrese el teléfono" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                            <ComboBox fx:id="comboTipoSexo" promptText="Seleccione sexo" GridPane.columnIndex="1" GridPane.rowIndex="8">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Femenino" />
                                        <String fx:value="Masculino" />
                                    </FXCollections>
                                </items>
                            </ComboBox>

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                            <TextField fx:id="tfEmail" promptText="Ingrese el email" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Ocupación:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                            <ComboBox fx:id="comboTipoOcupacion" onAction="#cargarComboEspecialidad" promptText="Seleccione Ocupacion" GridPane.columnIndex="1" GridPane.rowIndex="10">
                                <items>
                                    <FXCollections fx:factory="observableArrayList" >
                                        <String fx:value="Administrador" />
                                        <String fx:value="Medico" />
                                        <String fx:value="Asistente" />
                                        <String fx:value="Enfermero" />
                                        <String fx:value="Residuos Biologicos" />
                                        <String fx:value="Mantenimiento General" />
                                        <String fx:value="Jardinero" />
                                        <String fx:value="Limpieza" />
                                        <String fx:value="Guardia de seguridad" />
                                        <String fx:value="Chofer de Ambulancia" />
                                        <String fx:value="Encargado de Almacen Medico" />
                                        <String fx:value="Repartidor Medicamentos" />
                                        <String fx:value="Auxiliar de Cafeteria" />




                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Especialidad:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                            <ComboBox fx:id="comboTipoEspecialidad" promptText="Seleccione Especialidadad" GridPane.columnIndex="1" GridPane.rowIndex="11">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">

                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Fecha de Ingreso:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                            <DatePicker fx:id="dpFechaIngreso" promptText="Seleccione fecha de ingreso" GridPane.columnIndex="1" GridPane.rowIndex="12" />

                            <Button fx:id="btnRegistrar" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Registrar Empleado" GridPane.columnIndex="1" GridPane.rowIndex="13" onAction="#actionRegistrar"/>
                        </children>
                    </GridPane>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</ScrollPane>
