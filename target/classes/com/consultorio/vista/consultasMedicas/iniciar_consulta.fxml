<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.consultorio.controlador.consultasMedicas.iniciarConsulta"
            prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #F8F9FA;">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="30.0">
            <children>

                <Label text="Iniciar Consulta"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                <Label text="Paciente actual:" />
                <TextField fx:id="txtPaciente" promptText="Nombre del paciente" />

                <Label text="Motivo de la consulta:" />
                <TextArea fx:id="txtMotivo" promptText="Describa el motivo" prefRowCount="4" />

                <Button text="Comenzar Consulta" fx:id="btnComenzar"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px;" />

            </children>
        </VBox>
    </children>
</AnchorPane>